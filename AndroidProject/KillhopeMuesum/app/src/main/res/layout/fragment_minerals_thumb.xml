<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/minerals_thumb_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:id="@+id/mineral_thumb_image"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/blue_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/mineral_thumb_image"
        android:layout_alignRight="@+id/mineral_thumb_image"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:layout_gravity="bottom|center_horizontal"
        style="@style/button_text"
        android:id="@+id/mineral_thumb_text"
        android:text="HELLO WORLD" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mineral_list"></LinearLayout>


</RelativeLayout>

