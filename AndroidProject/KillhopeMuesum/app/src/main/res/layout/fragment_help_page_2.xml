<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/menu_padding">

        <TextView
            android:background="@drawable/history_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tips for using the Mineral Page"
            style="@style/info_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/history_format">
        <TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When any mineral page for a particular mineral loads, it will display an image of the mineral and the most basic information about it (as shown in the image below). However, there are 3 further levels of information about the mineral and additional  images of it which  you can access. This page gives  you tips on how to do this."
            style="@style/info_text"/>
        <ImageView
            android:id="@+id/helpmoreinfo"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/helpmoreinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            style="@style/history_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="\nTip Number 1"
            style="@style/info_header"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="How to display more information about a mineral when you are on its Mineral Page:"
            style="@style/info_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="1. Click on the downward facing arrow on the bottom of the mineral page (which was shown in the image above)  and you will see an intermediate level of information .
\n\n2. Repeat step 1 again and you  will see an advanced level of information.
\n\nk 3. Repeat step 1 another time  and you will see an expert  level of information.
"
            style="@style/info_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="\n Tip Number 2"
            style="@style/info_header"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="\nHow to access more images of a particular mineral from its Mineral Page:"
            style="@style/info_title"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="You can do this by following these steps:
\n\n1. Click on the image of the mineral on its mineral page. The page will display as shown in the image below."
            style="@style/info_text"/>
        <ImageView
            android:id="@+id/helpmoreimages2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/helpmoreimages2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            style="@style/history_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="2. If there are additional images of the mineral, you will see left and right hand arrows at the top of the page (as shown in the image below). Click on the left or right hand arrow to see the other images of the mineral. Alternatively, you can swipe to the right or left."
           style="@style/info_text"/>


        <ImageView
            android:id="@+id/helpmoreimages1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/helpmoreimages1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_weight="0.5"
            style="@style/history_image"
            />
    </LinearLayout>
    </LinearLayout>
</ScrollView>